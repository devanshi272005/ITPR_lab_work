import java.util.Scanner; // importing package
public class FactorialCalculation {
    public static int calculateFactorial(int n){ // declaring a method
       // recursive method to find factorial  method 
        if(n==0|| n==1){
        return 1; // base case
      }
      else{
        return(n*calculateFactorial(n)); // recursive case
       }
}
   // creating main method
   public static void main(String[] args) {
    Scanner sc=new Scanner(System.in); // creating scanner class
    System.out.println("Enter a number");
    int num=sc.nextInt();
    int result=calculateFactorial(num); // calling the method
    System.out.println("Factorial is:"+result);
   }
}
