import java.util.Scanner;
public class triangle {

    public static void main(String[] args) {
        Scanner sc =new Scanner(System.in);
        System.out.println("enter two sides of a rectangle");
        float a= sc.nextFloat(); //length of the rectangle
        float b= sc.nextFloat(); //breadth of the rectangle
        // calculating the area and perimeter
        float area= a*b; // area of the rectangle
        float perimeter= 2*(a+b); //perimeter of the rectangle
        System.out.println("Area of rectangle is="+area);
        System.out.println("Perimeter of a rectangle is="+perimeter );


    }
}
